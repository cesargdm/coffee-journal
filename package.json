{
	"name": "coffee-journal",
	"version": "1.0.0",
	"main": "src/index.ts",
	"scripts": {
		"start": "expo start",
		"android": "expo run:android",
		"ios": "expo run:ios",
		"web": "expo start --web",
		"lint": "eslint . --ext .js,.jsx,.ts,.tsx",
		"format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
		"format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
		"typecheck": "tsc --noEmit",
		"test": "jest --watchAll",
		"clean": "rm -rf android ios node_modules bun.lock",
		"build:web": "SKIP_LINGUI_EXTRACT=true NODE_ENV=production expo export -p web && ./config/update-asset-paths.sh",
		"i18n:extract": "lingui extract",
		"i18n:compile": "lingui compile",
		"i18n:extract-compile": "lingui extract && lingui compile"
	},
	"dependencies": {
		"@babel/core": "^7.28.0",
		"@bottom-tabs/react-navigation": "^0.9.2",
		"@expo/vector-icons": "^14.1.0",
		"@lingui/babel-plugin-extract-messages": "^5.3.3",
		"@lingui/cli": "^5.3.3",
		"@lingui/core": "^5.3.3",
		"@lingui/detect-locale": "^5.3.3",
		"@lingui/loader": "^5.3.3",
		"@lingui/macro": "^5.3.3",
		"@lingui/react": "^5.3.3",
		"@react-native-async-storage/async-storage": "2.1.2",
		"@sentry/react-native": "~6.14.0",
		"@tanstack/react-form": "^1.14.1",
		"@tanstack/zod-form-adapter": "^0.42.1",
		"drizzle-kit": "0.31.4",
		"drizzle-orm": "0.44.3",
		"expo": "53.0.20",
		"expo-build-properties": "~0.14.8",
		"expo-constants": "~17.1.7",
		"expo-linking": "~7.1.7",
		"expo-router": "~5.1.4",
		"expo-status-bar": "~2.2.3",
		"expo-system-ui": "~5.0.10",
		"react": "19.0.0",
		"react-dom": "19.0.0",
		"react-native": "0.79.5",
		"react-native-bottom-tabs": "^0.9.2",
		"react-native-edge-to-edge": "1.6.0",
		"react-native-mmkv": "^3.3.0",
		"react-native-nitro-modules": "0.26.2",
		"react-native-reanimated": "^3.18.0",
		"react-native-safe-area-context": "5.4.0",
		"react-native-screens": "~4.11.1",
		"react-native-unistyles": "^3.0.5",
		"react-native-web": "^0.20.0",
		"zeego": "^3.0.6",
		"zod": "^4.0.5",
		"zustand": "^5.0.6"
	},
	"devDependencies": {
		"@testing-library/react-native": "^13.2.0",
		"@types/jest": "^30.0.0",
		"@types/react": "~19.0.0",
		"@typescript-eslint/eslint-plugin": "^8.37.0",
		"@typescript-eslint/parser": "^8.37.0",
		"ajv": "^8.17.1",
		"babel-plugin-macros": "^3.1.0",
		"babel-preset-expo": "~13.0.0",
		"eslint": "^9.31.0",
		"eslint-config-expo": "^9.2.0",
		"eslint-config-prettier": "^10.1.7",
		"eslint-plugin-perfectionist": "^4.15.0",
		"eslint-plugin-prettier": "^5.5.1",
		"eslint-plugin-react-compiler": "^19.1.0-rc.2",
		"eslint-plugin-unicorn": "^59.0.1",
		"jest": "~29.7.0",
		"jest-expo": "^53.0.9",
		"prettier": "^3.6.2",
		"prettier-config-cretia": "^3.0.0",
		"typescript": "^5.3.0",
		"typescript-eslint": "^8.37.0"
	},
	"prettier": "prettier-config-cretia",
	"packageManager": "bun@1.2.18",
	"private": true,
	"jest": {
		"preset": "jest-expo",
		"setupFilesAfterEnv": [
			"<rootDir>/jest.setup.js"
		],
		"transformIgnorePatterns": [
			"node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@sentry/react-native|native-base|react-native-svg|react-native-unistyles|react-native-nitro-modules)"
		],
		"moduleNameMapper": {
			"^@/(.*)$": "<rootDir>/src/$1",
			"^@components/(.*)$": "<rootDir>/src/components/$1",
			"^@styles/(.*)$": "<rootDir>/src/styles/$1",
			"^@app/(.*)$": "<rootDir>/src/app/$1"
		}
	}
}
