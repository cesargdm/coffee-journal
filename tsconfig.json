{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": false,
		"alwaysStrict": true,
		"baseUrl": ".",
		"exactOptionalPropertyTypes": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"module": "ESNext",
		"noEmit": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"paths": {
			"@/*": ["./src/*"]
		},
		"removeComments": true,
		"skipLibCheck": true,
		"strict": true,
		"strictNullChecks": true,
		"types": ["jest", "node"]
	},
	"extends": "expo/tsconfig.base",
	"include": [
		"eslint.config.mjs",
		"drizzle.config.ts",
		"src/**/*",
		"__tests__/**/*"
	]
}
